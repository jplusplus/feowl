
### install framework software

postgres 9.1
postgis 1.5
python >=2.6
requirements.txt (use virtual env or pip with it)

### create database users and set up for postgis

(try sudo su; su - postgres)
 
createdb -U postgres feowl
createuser -U postgres -D -R -S -l feowl_django

psql -h localhost -U postgres -d feowl -f /usr/share/postgresql/9.1/contrib/postgis-1.5/postgis.sql
psql -h localhost -U postgres -d feowl -f /usr/share/postgresql/9.1/contrib/postgis-1.5/spatial_ref_sys.sql

$ psql -h localhost -U postgres -d feowl

ALTER USER feowl_django with password 'passwd123';
GRANT CONNECT ON DATABASE feowl TO feowl_django;
ALTER DATABASE feowl OWNER TO feowl_django ;

python ./manage.py syncdb
